<h1>Create Profile:</h1>

<%= form_tag("/profile") do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @user.name %>

  <%= label_tag :address %>
  <%= text_field_tag :address, @user.address %>

  <%= label_tag :city %>
  <%= text_field_tag :city, @user.city %>

  <%= label_tag :state %>
  <%= text_field_tag :state, @user.state %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip, @user.zip %>

  <%= label_tag :user_name, "User Name" %>
  <%= text_field_tag :user_name %>

  <%= label_tag :password %>
  <%= text_field_tag :password %>

  <%= label_tag :password_confirmation, "Confirm Password" %>
  <%= text_field_tag :password_confirmation %>

  <%= submit_tag "Create User" %>
<% end %>
