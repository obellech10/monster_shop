<h1>Shipping Information</h1>

<section class = 'shipping-address'>
  <h3><%= current_user.name %></h3>
  <p><%= current_user.address %></p>
  <p><%= current_user.city %> <%= current_user.state %> <%= current_user.zip %></p>
</section>


<% current_user.orders.each do |order|%>
  <h2><%= link_to "Order #{order.id}", order_show_path(order.id) =%></h2>
  <h3>Total: <%= number_to_currency(order.grand_total) %></h3>
  <p>Order Created: <%= order.created_at %></p>
  <p>Order Status: <%= order.status %></p>
  <p>Order Last Updated: <%= order.updated_at %></p>
  <p>Order Quantity: <%= order.total_quantity %> </p>
  <p>Grand Total: <%= order.grand_total %></p>
<% end %>
